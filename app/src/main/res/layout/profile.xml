<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:orientation="horizontal"
            android:background="#FAD8D8">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Profile"
                android:textSize="24dp"
                android:textColor="#000000"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="156dp"
                />

            <ImageButton
                android:id="@+id/accountBtn"
                android:background="@null"
                android:layout_width="50dp"
                android:layout_height="47dp"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="323dp"
                android:scaleType="fitCenter"/>

        </FrameLayout>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="60dp"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginTop="118dp"
            android:layout_marginLeft="49dp">

            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/guest"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_height="56dp"
            android:layout_width="wrap_content"
            android:text="Jack"
            android:textSize="36dp"
            android:textColor="#000000"
            android:layout_marginTop="123dp"
            android:layout_marginLeft="213dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="San Francisco, CA"
            android:textSize="18dp"
            android:layout_marginTop="179dp"
            android:layout_marginLeft="180dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="231dp"
            android:text="I love you 3000"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="270dp"
            android:clickable="true"
            android:background="#F1F1F1">
            <ImageButton
                android:id="@+id/ChangePassBtn"
                android:background="@null"
                android:layout_width="55dp"
                android:layout_height="49dp"
                android:src="@drawable/changepassword_icon"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="203dp"
                android:layout_height="31dp"
                android:text="Change password"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="340dp"
            android:clickable="true"
            android:background="#F1F1F1">

            <ImageButton
                android:id="@+id/MsgBtn"
                android:layout_width="55dp"
                android:layout_height="49dp"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="12dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/message_icon" />

            <TextView
                android:layout_width="203dp"
                android:layout_height="31dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="22dp"
                android:text="Message"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="410dp"
            android:clickable="true"
            android:background="#F1F1F1">
            <ImageButton
                android:id="@+id/feedbackBtn"
                android:background="@null"
                android:layout_width="55dp"
                android:layout_height="49dp"
                android:src="@drawable/feedback_icon"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="11dp"
                android:scaleType="fitCenter"
                />
            <TextView
                android:layout_width="203dp"
                android:layout_height="31dp"
                android:text="Feedback"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="50dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="480dp"
            android:clickable="true"
            android:background="#F1F1F1">
            <ImageView
                android:background="@null"
                android:layout_width="55dp"
                android:layout_height="49dp"
                android:src="@drawable/information_icon"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="203dp"
                android:layout_height="31dp"
                android:text="Version: 3.0"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="550dp"
            android:background="#F1F1F1">
            <ImageButton
                android:id="@+id/logoutBtn"
                android:background="@null"
                android:layout_width="55dp"
                android:layout_height="49dp"
                android:src="@drawable/logout_icon"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="12dp"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="203dp"
                android:layout_height="31dp"
                android:text="Log Out"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="50dp"
                />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#eeebeb"
        android:orientation="horizontal"
        android:gravity="bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content">

        <ImageButton
            android:id="@+id/homeBtn"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:contentDescription="HOME"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/home_icon" />

        <ImageButton
            android:id="@+id/libraryBtn"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@null"
            android:contentDescription="LIBRARY"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/library_icon" />

        <ImageButton
            android:id="@+id/profileBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:contentDescription="PROFILE"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/profile_icon" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>